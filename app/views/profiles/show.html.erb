<div class="posts-wrapper">
  <div class="row profile-header">
    <div class="col-md-6">
      <div class="img-circle">
        <%= profile_avatar_select(@user) %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="user-name-and-follow">
        <h3 class="profile-user-name">
          <%= @user.user_name %>
        </h3>
        <% if @user == current_user %>
          <%= link_to 'Edit Profile', edit_profile_path(@user.user_name), class: 'btn edit-button' %>
        <% else %>
          <%= render 'follow_form' if user_signed_in? %>
        <% end %>
      </div>
      <p class="profile-bio">
        <%= @user.bio %>
      </p>
      <div class="user-statistics">
        <p>
          <%= pluralize @user.posts.count, 'post' %>
          <% @user ||= current_user %>
        <div class="stats">
          <a href="<%= following_profile_path(@user.user_name) %>">
            <strong id="following" class="user-statistics">
              <%= @user.following.count %>
            </strong>
            following
          </a>
          <a href="<%= followers_profile_path(@user.user_name) %>">
            <strong id="followers" class="user-statistics">
              <%= @user.followers.count %>
            </strong>
            followers
          </a>
        </div>
        </p>
      </div>
    </div>
  </div>
</div>
<% @posts.each do |post| %>
  <%= render 'posts/post', post:post %>
<% end %>